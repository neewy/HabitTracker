<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="ru.android4life.habittracker"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".HabitTrackerApplication"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        tools:replace="android:icon"
        >
        <receiver android:name=".reciever.AlarmReceiver"></receiver>

        <receiver android:name=".reciever.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>


        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddHabitActivity"/>
    </application>

</manifest>