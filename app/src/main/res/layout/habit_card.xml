<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--top card, which contains name, question and buttons-->

    <android.support.v7.widget.CardView
        android:id="@+id/habit_confirmation"
        android:layout_width="match_parent"
        android:layout_height="190dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Name -->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/habit_card_name"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Gym"
                android:textColor="#3999b2"
                android:textSize="40sp" />

            <!-- Question -->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/habit_card_question"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/habit_card_name"
                android:layout_centerHorizontal="true"
                android:text="Did I biceps?"
                android:textSize="20sp" />

            <!-- Two buttons -->
            <LinearLayout
                android:id="@+id/habit_card_buttons"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp">

                <!-- Skip -->
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/habit_card_skip"
                    app:backgroundTint="@color/neutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:theme="@style/HabitCardButtonSkip"
                    android:textColor="@color/transparent"
                    android:text="@string/skip"
                    />

                <!-- Done -->
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/habit_card_done"
                    app:backgroundTint="?colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/HabitCardButtonDone"
                    android:text="@string/done" />


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!-- List with card settings -->
    <!-- TODO: add title at the top of the list -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/habit_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/habit_confirmation"
        android:layout_gravity="center_horizontal|top">

    </android.support.v7.widget.RecyclerView>

    <!-- Edit button -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_edit_white" />

</RelativeLayout>