<resources>

    <!-- Base application theme. -->

    <style name="BaseStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeBlueAndPink" parent="BaseStyle">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
        <item name="colorAccent">@color/pink</item>
        <item name="colorControlNormal">@color/pink</item>
        <item name="colorControlActivated">#ff6b9e</item>
        <item name="colorControlHighlight">#ff6b9e</item>
    </style>

    <style name="AppThemePurpleAndGreen" parent="BaseStyle">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purpleDark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">#45ffa4</item>
        <item name="colorControlHighlight">#45ffa4</item>
    </style>

    <style name="AppThemeRedAndBlue" parent="BaseStyle">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <!--<item name="colorPrimaryLight">#FFCDD2</item>-->
        <item name="colorAccent">@color/brightBlue</item>
        <item name="colorControlNormal">@color/brightBlue</item>
        <item name="colorControlActivated">#536DFE</item>
        <item name="colorControlHighlight">#536DFE</item>
    </style>

    <style name="AppThemeTealAndLime" parent="BaseStyle">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/tealDark</item>
        <!--<item name="colorPrimaryLight">#80CBC4</item>-->
        <item name="colorAccent">@color/lime</item>
        <item name="colorControlNormal">@color/lime</item>
        <item name="colorControlActivated">#ebfd34</item>
        <item name="colorControlHighlight">#ebfd34</item>
    </style>

    <style name="HabitCardButtonDone" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">?colorPrimaryDark</item>
        <item name="colorAccent">?colorPrimaryDark</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="HabitCardButtonSkip" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/neutral</item>
        <item name="colorAccent">@color/neutral</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="BaseStyle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseStyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>